<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestREST_210422.MainPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add New" IconImageSource="ic_action_new.png" Clicked="OnAddNewTest"/>
        <ToolbarItem Text="Refresh" IconImageSource="ic_autorenew.png" Clicked="OnRefreshTest"/>
    </ContentPage.ToolbarItems>

    <ListView ItemsSource="{Binding}"
              ItemTapped="OnEditTest">
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding EventTitle}" Detail="{Binding EventDescription}">
                </TextCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
